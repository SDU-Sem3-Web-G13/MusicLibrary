@{
    ViewData["Title"] = "Home Page";
}

<div class="text-left">
    <h1 class="display-4">Welcome</h1>
    <div style="text-align: center;">
        <p style="text-align: center; font-weight: bold;"> Form </p>
        <form>

            <p>Album Name</p>
            <input type="text">

            <br />

            <p>Release Date</p>
            <input type="date">

            <br />

            <p>Artist</p>
            <input type="text">

            <br />

            <p>Type</p>
            <select name="type">
                <option value="1">Single</option>
                <option value="2">EP</option>
                <option value="3">LP</option>
            </select>

            <br />
            
            <p>Description</p>
            <input type="text"
                style="
                    width: 150px;
                    height: 40px;"
            >

            <br />

            <p>Tracks</p>
            <div>
                1.  <input type="text"> <br />
                2.  <input type="text"> <br />
                3.  <input type="text"> <br />
                4.  <input type="text"> <br />
                5.  <input type="text"> <br />
                6.  <input type="text"> <br />
                7.  <input type="text"> <br />
                8.  <input type="text"> <br />
                9.  <input type="text"> <br />
                10. <input type="text"> <br />
            </div>

            <br />
            <input type="submit" value="Send">
        </form>
    </div>
</div>
