@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<style>
    .form-input {
        margin-bottom: 10px;
    }
    .submit-button {
        margin-top: 10px;
    }
</style>


<h2>Login</h2>

<form method="post">
    
    <div class="form-group">
        <label asp-for="User.Email" class="control-label">Email</label>
        <input asp-for="User.Email" class="form-control form-input" id="Email" placeholder="Enter your email" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="User.Password" class="control-label">Password</label>
        <input asp-for="User.Password" type="password" class="form-control form-input" id="Password" placeholder="Enter your password" />
        <span asp-validation-for="User.Password" class="text-danger"></span>
    </div>

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert" style="margin-top: 10px">
            @Model.ErrorMessage
        </div>
    }
   
    <button type="submit" class="btn btn-primary submit-button">Login</button>

    
    

    
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}