@model RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form id="registerForm" method="post">
    <input asp-for="User.FirstName" placeholder="First Name" />
    <span asp-validation-for="User.FirstName" class="text-danger"></span>

    <input asp-for="User.LastName" placeholder="Last Name" />
    <span asp-validation-for="User.LastName" class="text-danger"></span>

    <input asp-for="User.Email" placeholder="Email" />
    <span asp-validation-for="User.Email" class="text-danger"></span>

    <input asp-for="User.Password" type="password" placeholder="Password" />
    <span asp-validation-for="User.Password" class="text-danger"></span>

    <input asp-for="User.ConfirmPassword" type="password" placeholder="Confirm Password" />
    <span asp-validation-for="User.ConfirmPassword" class="text-danger"></span>

    <button type="submit">Register</button>
    <div id="registerError" class="text-danger">@Model.ErrorMessage</div>
</form>
