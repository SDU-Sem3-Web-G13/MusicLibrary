@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form method="post">
    
    <div class="form-group">
        <label asp-for="User.FirstName" class="control-label">First Name</label>
        <input asp-for="User.FirstName" class="form-control" id="FirstName" placeholder="Enter your first name" />
        <span asp-validation-for="User.FirstName" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="User.LastName" class="control-label">Last Name</label>
        <input asp-for="User.LastName" class="form-control" id="LastName" placeholder="Enter your last name" />
        <span asp-validation-for="User.LastName" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="User.Email" class="control-label">Email</label>
        <input asp-for="User.Email" type="email" class="form-control" id="Email" placeholder="Enter your email" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="User.Password" class="control-label">Password</label>
        <input asp-for="User.Password" type="password" class="form-control" id="Password" placeholder="Enter your password" />
        <span asp-validation-for="User.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="User.ConfirmPassword" class="control-label">Confirm Password</label>
        <input asp-for="User.ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="Confirm your password" />
        <span asp-validation-for="User.ConfirmPassword" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Register</button>

    @if (Model.ErrorMessage != null) 
    {
        <div class="alert alert-danger mt-2">@Model.ErrorMessage</div>
    }

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} 
}