@page
@model StatisticsModel
@{
    ViewData["Title"] = "Statistics";
}
<main>
    <h1>Statistics</h1>
        <div>
        <a class="nav-link text-dark" asp-area="" asp-page="/AlbumsView">
            <button class="animated-btn" style="position: fixed; top: 100px; right: 50px;">Albums</button>
        </a>

        <section>
            <h2>Statistics</h2>
            <p>Number of albums: @Model.GetNumberOfAlbums</p>
            <p>Number of artists: @Model.GetNumberOfArtists</p>
            <p>Number of genres: @Model.GetNumberOfGenres</p>
            <p>Number of songs: @Model.GetNumberOfSongs</p>
        </section>
    </div>
</main>

<style>
  .animated-btn {
  background-color: #6a0dad;
  color: #fff;
  border: 2px solid #4b0082; 
  padding: 10px 18px;
  font-size: 12px;
  font-weight: bold;
  border-radius: 8px; 
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  height: 40px;
  width: 100px;
}

.animated-btn:hover {
  background-color: #4b0082;
  color: #e0b3ff;
  transform: scale(1.05);
}

.animated-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.2);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.animated-btn:hover::after {
  opacity: 1;
}

.animated-btn:active {
  transform: scale(0.98);
}
</style>